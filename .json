{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build TaskFlow",
      "type": "shell",
      "command": "C:/MinGW/bin/g++.exe",
      "args": [
        "-g",
        "main.cpp",
        "-o",
        "taskflow.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
